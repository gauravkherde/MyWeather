<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCCFE0"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintStart_toEndOf="@id/search_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <EditText
            android:id="@+id/search_box"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:background="#E4EBF3"
            android:hint="Nagpur"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_image"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/only_sun"
            app:layout_constraintEnd_toStartOf="@+id/ll_current_weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_box" />

        <LinearLayout
            android:id="@+id/ll_current_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/weather_image"
            app:layout_constraintTop_toBottomOf="@id/search_box">

            <TextView
                android:id="@+id/temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="50dp"
                tools:text="18Â°C" />

            <TextView
                android:id="@+id/feel_like_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="feels like 14" />

            <TextView
                android:id="@+id/weather_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:visibility="gone"
                tools:text="RAIN" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_image">

            <androidx.cardview.widget.CardView
                android:id="@+id/relative_humidity_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Relative Humidity"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/relative_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#171F30"
                    android:textSize="25dp"
                    tools:text="111" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rain_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintHorizontal_bias="0.523">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Rain"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/rain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#171F30"
                    android:textSize="25dp"
                    tools:text="0 mm" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_first_row">

            <androidx.cardview.widget.CardView
                android:id="@+id/shower_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Showers"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/shower_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#171F30"
                    android:textSize="25dp"
                    tools:text="0" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/precipitation_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintHorizontal_bias="0.523">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Precipitation"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/precipitation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#171F30"
                    android:textSize="25dp"
                    tools:text="0 mm" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_third_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_second_row">

            <androidx.cardview.widget.CardView
                android:id="@+id/wind_speed_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Wind Speed"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/wind_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#171F30"
                    android:textSize="25dp"
                    tools:text="0" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wind_direction_card"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#D2E3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintHorizontal_bias="0.523">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="Wind    Direction"
                    android:textColor="#171F30"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/wind_direction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="0 mm"
                    android:textColor="#171F30"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/indeterminateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>